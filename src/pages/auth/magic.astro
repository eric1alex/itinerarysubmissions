---
import { db, VerificationCode, User, eq, and } from "astro:db";
import { createSessionValue, getSessionCookieOptions } from "../../lib/auth";

const url = new URL(Astro.request.url);
const token = url.searchParams.get("token");

let error = "";
let success = false;

if (!token) {
  error = "Invalid magic link";
} else {
  try {
    // Find valid magic link token
    const verificationCodes = await db
      .select()
      .from(VerificationCode)
      .where(
        and(
          eq(VerificationCode.code, token),
          eq(VerificationCode.purpose, "login"),
        ),
      );

    const verification = verificationCodes[0];

    if (!verification) {
      error = "Invalid or expired magic link";
    } else if (new Date() > new Date(verification.expiresAt)) {
      error = "This magic link has expired";
    } else {
      // Find user
      const users = await db
        .select()
        .from(User)
        .where(eq(User.email, verification.email));

      const user = users[0];

      if (!user) {
        error = "User not found";
      } else {
        // Update last login
        await db
          .update(User)
          .set({ lastLoginAt: new Date() })
          .where(eq(User.id, user.id));

        // Delete used token
        await db
          .delete(VerificationCode)
          .where(eq(VerificationCode.id, verification.id));

        // Create session
        const sessionValue = createSessionValue(user.id, user.email);
        Astro.cookies.set("session", sessionValue, getSessionCookieOptions());

        success = true;

        // Redirect to my itineraries
        return Astro.redirect("/my-itineraries");
      }
    }
  } catch (err) {
    console.error("Magic link error:", err);
    error = "An error occurred";
  }
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Logging In - Where In India</title>
