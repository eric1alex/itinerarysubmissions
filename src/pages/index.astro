---
import Layout from "../layouts/Layout.astro";
import { db, Itinerary, User, eq } from "astro:db";

// Load all published itineraries with author info
const itinerariesData = await db
    .select({
        id: Itinerary.id,
        title: Itinerary.title,
        fromLocation: Itinerary.fromLocation,
        toLocation: Itinerary.toLocation,
        coverImage: Itinerary.coverImage,
        duration: Itinerary.duration,
        transport: Itinerary.transport,
        createdAt: Itinerary.createdAt,
    })
    .from(Itinerary)
    .innerJoin(User, eq(Itinerary.userId, User.id))
    .where(eq(Itinerary.isPublished, true));

const placeholderImage =
    "https://images.unsplash.com/photo-1524492412937-b28074a5d7da?w=800&h=600&fit=crop";
---

<Layout title="Explore Public Itineraries - Where In India">
    <main class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <div class="flex flex-wrap justify-between items-start gap-4 mb-6">
            <div class="flex flex-col gap-2">
                <p
                    class="text-text-light dark:text-text-dark text-4xl font-black leading-tight tracking-[-0.033em]"
                >
                    Explore Public Itineraries
                </p>
                <p
                    class="text-gray-500 dark:text-gray-400 text-base font-normal leading-normal"
                >
                    Discover and get inspired by trips from our community.
                </p>
            </div>
            <a
                href="/submit"
                class="flex items-center justify-center gap-2 px-5 py-2.5 bg-primary text-white text-sm font-medium rounded-lg shadow-sm hover:bg-primary/90 transition-colors"
            >
                <span class="material-symbols-outlined text-base">add</span>
                <span>Create New</span>
            </a>
        </div>

        <div
            class="px-4 py-3 bg-white dark:bg-neutral-800 rounded-xl border border-border-light dark:border-neutral-700 mb-6"
        >
            <label class="flex flex-col min-w-40 h-12 w-full">
                <div class="flex w-full flex-1 items-stretch rounded-lg h-full">
                    <div
                        class="text-gray-500 dark:text-gray-400 flex bg-gray-100 dark:bg-neutral-700 items-center justify-center pl-4 rounded-l-lg"
                    >
                        <span class="material-symbols-outlined">search</span>
                    </div>
                    <input
                        id="search-input"
                        class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-r-lg text-text-light dark:text-text-dark focus:outline-0 focus:ring-0 border-none bg-gray-100 dark:bg-neutral-700 h-full placeholder:text-gray-500 dark:placeholder:text-gray-400 px-4 text-base font-normal leading-normal"
                        placeholder="Search by destination or title"
                    />
                </div>
            </label>
        </div>

        <div class="flex gap-3 px-4 flex-wrap mb-6">
            <div class="relative">
                <select
                    id="transport-filter"
                    style="-webkit-appearance: none; -moz-appearance: none; appearance: none;"
                    class="appearance-none h-10 pl-4 pr-10 rounded-lg bg-white dark:bg-neutral-800 border border-gray-200 dark:border-neutral-600 text-text-light dark:text-text-dark text-sm font-medium cursor-pointer hover:border-primary focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-colors"
                >
                    <option value="">All Transport</option>
                    <option value="Car">Car</option>
                    <option value="Train">Train</option>
                    <option value="Flight">Flight</option>
                    <option value="Boat">Boat</option>
                    <option value="Bus">Bus</option>
                </select>
            </div>

            <div class="relative">
                <select
                    id="sort-filter"
                    style="-webkit-appearance: none; -moz-appearance: none; appearance: none;"
                    class="appearance-none h-10 pl-4 pr-10 rounded-lg bg-white dark:bg-neutral-800 border border-gray-200 dark:border-neutral-600 text-text-light dark:text-text-dark text-sm font-medium cursor-pointer hover:border-primary focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none transition-colors"
                >
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                </select>
            </div>
        </div>

        {
            itinerariesData.length === 0 ? (
                <div class="flex flex-col items-center justify-center py-20 gap-4">
                    <span class="material-symbols-outlined text-6xl text-gray-400">
                        explore_off
                    </span>
                    <p class="text-gray-500 dark:text-gray-400 text-lg">
                        No itineraries yet. Be the first to create one!
                    </p>
                    <a
                        href="/submit"
                        class="flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg font-medium hover:bg-primary/90"
                    >
                        <span class="material-symbols-outlined">add</span>
                        <span>Create Itinerary</span>
                    </a>
                </div>
            ) : (
                <div
                    id="itineraries-grid"
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4"
                >
                    {itinerariesData.map((itinerary) => (
                        <a
                            href={`/itinerary/${itinerary.id}`}
                            class="itinerary-card group flex flex-col rounded-xl bg-white dark:bg-neutral-800 border border-gray-200 dark:border-neutral-700 cursor-pointer transition-all duration-200 hover:border-primary hover:shadow-lg overflow-hidden"
                            data-id={itinerary.id}
                            data-transport={itinerary.transport || ""}
                            data-title={itinerary.title}
                            data-from={itinerary.fromLocation}
                            data-to={itinerary.toLocation}
                            data-created={itinerary.createdAt.toISOString()}
                        >
                            <div
                                class="w-full aspect-video bg-center bg-no-repeat bg-cover"
                                style={`background-image: url("${itinerary.coverImage || placeholderImage}");`}
                            />

                            <div class="p-4 flex flex-col">
                                <div class="flex items-center gap-2 text-primary mb-2">
                                    <span class="material-symbols-outlined text-lg">
                                        flight_takeoff
                                    </span>
                                    <p class="text-sm font-semibold">
                                        {itinerary.fromLocation} â†’{" "}
                                        {itinerary.toLocation}
                                    </p>
                                </div>

                                <p class="text-gray-900 dark:text-white text-base font-bold leading-snug line-clamp-2 mb-3 group-hover:text-primary transition-colors">
                                    {itinerary.title}
                                </p>

                                <div class="flex items-center gap-3 text-gray-500 dark:text-gray-400 text-sm mt-auto">
                                    <div class="flex items-center gap-1.5 bg-gray-100 dark:bg-neutral-700 px-2 py-1 rounded">
                                        <span class="material-symbols-outlined text-base">
                                            schedule
                                        </span>
                                        <span>{itinerary.duration}</span>
                                    </div>
                                    {itinerary.transport && (
                                        <div class="flex items-center gap-1.5 bg-gray-100 dark:bg-neutral-700 px-2 py-1 rounded">
                                            <span class="material-symbols-outlined text-base">
                                                {itinerary.transport === "Car"
                                                    ? "directions_car"
                                                    : itinerary.transport ===
                                                        "Train"
                                                      ? "train"
                                                      : itinerary.transport ===
                                                          "Boat"
                                                        ? "directions_boat"
                                                        : itinerary.transport ===
                                                            "Flight"
                                                          ? "flight"
                                                          : "directions_bus"}
                                            </span>
                                            <span>{itinerary.transport}</span>
                                        </div>
                                    )}
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            )
        }
    </main>
</Layout>

<script>
    function applyFilters(): void {
        const searchInput =
            (
                document.getElementById("search-input") as HTMLInputElement
            )?.value.toLowerCase() || "";
        const transportFilter =
            (document.getElementById("transport-filter") as HTMLSelectElement)
                ?.value || "";
        const sortFilter =
            (document.getElementById("sort-filter") as HTMLSelectElement)
                ?.value || "newest";

        const cards = Array.from(
            document.querySelectorAll(".itinerary-card"),
        ) as HTMLElement[];

        cards.forEach((card) => {
            const title = card.getAttribute("data-title")?.toLowerCase() || "";
            const from = card.getAttribute("data-from")?.toLowerCase() || "";
            const to = card.getAttribute("data-to")?.toLowerCase() || "";
            const transport = card.getAttribute("data-transport") || "";

            const matchesSearch =
                title.includes(searchInput) ||
                from.includes(searchInput) ||
                to.includes(searchInput);
            const matchesTransport =
                !transportFilter || transport === transportFilter;

            card.style.display =
                matchesSearch && matchesTransport ? "flex" : "none";
        });

        const visibleCards = cards.filter(
            (card) => card.style.display !== "none",
        );
        visibleCards.sort((a, b) => {
            const dateA = new Date(
                a.getAttribute("data-created") || "",
            ).getTime();
            const dateB = new Date(
                b.getAttribute("data-created") || "",
            ).getTime();
            return sortFilter === "newest" ? dateB - dateA : dateA - dateB;
        });

        const grid = document.getElementById("itineraries-grid");
        if (grid) {
            visibleCards.forEach((card) => grid.appendChild(card));
        }
    }

    document
        .getElementById("search-input")
        ?.addEventListener("input", applyFilters);
    document
        .getElementById("transport-filter")
        ?.addEventListener("change", applyFilters);
    document
        .getElementById("sort-filter")
        ?.addEventListener("change", applyFilters);
</script>
