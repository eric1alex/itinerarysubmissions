---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login - Where In India">
    <main
        class="flex flex-1 justify-center items-center py-20 px-4 sm:px-6 lg:px-8"
    >
        <div class="w-full max-w-md">
            <div class="text-center mb-8">
                <h1
                    class="text-4xl font-black text-text-light dark:text-text-dark mb-2"
                >
                    Welcome Back
                </h1>
                <p class="text-gray-500 dark:text-gray-400">
                    Enter your email to receive a magic link
                </p>
            </div>

            <div
                id="emailForm"
                class="bg-white dark:bg-gray-800/50 p-8 rounded-xl border border-border-light dark:border-border-dark"
            >
                <label class="flex flex-col w-full">
                    <p
                        class="text-gray-900 dark:text-white text-base font-medium leading-normal pb-2"
                    >
                        Email Address
                    </p>
                    <input
                        id="email"
                        type="email"
                        required
                        class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-gray-900 dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800/50 h-14 placeholder:text-gray-500 dark:placeholder:text-gray-400 p-[15px] text-base font-normal leading-normal"
                        placeholder="your@email.com"
                    />
                </label>

                <button
                    id="sendLinkBtn"
                    class="mt-6 w-full flex items-center justify-center h-12 px-6 bg-primary text-white rounded-lg font-bold hover:bg-primary/90 transition-colors"
                >
                    <span>Send Magic Link</span>
                </button>

                <p id="message" class="mt-4 text-sm text-center hidden"></p>
            </div>

            <div
                id="successMessage"
                class="hidden bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-6 mt-6"
            >
                <div class="flex items-start gap-3">
                    <span
                        class="material-symbols-outlined text-green-600 dark:text-green-400 text-2xl"
                        >mark_email_read</span
                    >
                    <div>
                        <h3
                            class="font-bold text-green-900 dark:text-green-100 mb-1"
                        >
                            Check Your Email
                        </h3>
                        <p class="text-sm text-green-700 dark:text-green-300">
                            We've sent a login link to your email. Click the
                            link to access your account.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    const emailInput = document.getElementById("email") as HTMLInputElement;
    const sendLinkBtn = document.getElementById(
        "sendLinkBtn",
    ) as HTMLButtonElement;
    const message = document.getElementById("message") as HTMLParagraphElement;
    const emailForm = document.getElementById("emailForm") as HTMLDivElement;
    const successMessage = document.getElementById(
        "successMessage",
    ) as HTMLDivElement;

    sendLinkBtn.addEventListener("click", async () => {
        const email = emailInput.value.trim();

        if (!email || !email.includes("@")) {
            message.textContent = "Please enter a valid email address";
            message.className = "mt-4 text-sm text-center text-red-500";
            message.classList.remove("hidden");
            return;
        }

        sendLinkBtn.disabled = true;
        sendLinkBtn.innerHTML = "<span>Sending...</span>";

        try {
            const response = await fetch("/api/auth/send-magic-link.json", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email }),
            });

            const result = await response.json();

            if (result.success) {
                emailForm.classList.add("hidden");
                successMessage.classList.remove("hidden");
            } else {
                message.textContent =
                    result.message || "Failed to send magic link";
                message.className = "mt-4 text-sm text-center text-red-500";
                message.classList.remove("hidden");
                sendLinkBtn.disabled = false;
                sendLinkBtn.innerHTML = "<span>Send Magic Link</span>";
            }
        } catch (error) {
            message.textContent = "An error occurred. Please try again.";
            message.className = "mt-4 text-sm text-center text-red-500";
            message.classList.remove("hidden");
            sendLinkBtn.disabled = false;
            sendLinkBtn.innerHTML = "<span>Send Magic Link</span>";
        }
    });

    // Allow Enter key to submit
    emailInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
            sendLinkBtn.click();
        }
    });
</script>
