---
import Layout from "../layouts/Layout.astro";
import { getUserFromRequest } from "../lib/auth";

// Redirect if already logged in
const user = getUserFromRequest(Astro.request);
if (user) {
    return Astro.redirect("/");
}
---

<Layout title="Login - Where In India">
    <main
        class="flex flex-1 justify-center items-center py-20 px-4 sm:px-6 lg:px-8"
    >
        <div class="w-full max-w-md">
            <!-- Step 1: Email Input -->
            <div id="emailStep">
                <div class="text-center mb-8">
                    <span
                        class="material-symbols-outlined text-5xl text-primary mb-4"
                        >account_circle</span
                    >
                    <h1
                        class="text-4xl font-black text-text-light dark:text-text-dark mb-2"
                    >
                        Welcome Back
                    </h1>
                    <p class="text-gray-500 dark:text-gray-400">
                        Enter your email to receive a verification code
                    </p>
                </div>

                <div
                    class="bg-white dark:bg-gray-800/50 p-8 rounded-xl border border-border-light dark:border-border-dark"
                >
                    <label class="flex flex-col w-full">
                        <p
                            class="text-gray-900 dark:text-white text-base font-medium leading-normal pb-2"
                        >
                            Email Address
                        </p>
                        <input
                            id="email"
                            type="email"
                            required
                            class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-gray-900 dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800/50 h-14 placeholder:text-gray-500 dark:placeholder:text-gray-400 p-[15px] text-base font-normal leading-normal"
                            placeholder="your@email.com"
                        />
                    </label>

                    <button
                        id="sendCodeBtn"
                        class="mt-6 w-full flex items-center justify-center h-12 px-6 bg-primary text-white rounded-lg font-bold hover:bg-primary/90 transition-colors"
                    >
                        <span>Send Verification Code</span>
                    </button>

                    <p
                        id="emailMessage"
                        class="mt-4 text-sm text-center hidden"
                    >
                    </p>
                </div>
            </div>

            <!-- Step 2: OTP Verification -->
            <div id="codeStep" class="hidden">
                <div class="text-center mb-8">
                    <span
                        class="material-symbols-outlined text-5xl text-primary mb-4"
                        >lock</span
                    >
                    <h1
                        class="text-4xl font-black text-text-light dark:text-text-dark mb-2"
                    >
                        Enter Code
                    </h1>
                    <p class="text-gray-500 dark:text-gray-400">
                        We sent a 4-digit code to <span
                            id="displayEmail"
                            class="font-semibold text-text-light dark:text-text-dark"
                        ></span>
                    </p>
                </div>

                <div
                    class="bg-white dark:bg-gray-800/50 p-8 rounded-xl border border-border-light dark:border-border-dark"
                >
                    <label class="flex flex-col w-full">
                        <p
                            class="text-gray-900 dark:text-white text-base font-medium leading-normal pb-2"
                        >
                            Verification Code
                        </p>
                        <input
                            id="code"
                            type="text"
                            maxlength="4"
                            required
                            class="form-input flex w-full min-w-0 flex-1 resize-none overflow-hidden rounded-lg text-gray-900 dark:text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800/50 h-14 placeholder:text-gray-500 dark:placeholder:text-gray-400 p-[15px] text-2xl font-bold leading-normal text-center tracking-widest"
                            placeholder="0000"
                        />
                    </label>

                    <button
                        id="verifyCodeBtn"
                        class="mt-6 w-full flex items-center justify-center h-12 px-6 bg-primary text-white rounded-lg font-bold hover:bg-primary/90 transition-colors"
                    >
                        <span>Verify & Login</span>
                    </button>

                    <div class="flex justify-between items-center mt-4">
                        <button
                            id="backBtn"
                            class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white flex items-center gap-1"
                        >
                            <span class="material-symbols-outlined text-sm"
                                >arrow_back</span
                            >
                            Change Email
                        </button>
                        <button
                            id="resendBtn"
                            class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary"
                        >
                            Resend Code
                        </button>
                    </div>

                    <p id="codeMessage" class="mt-4 text-sm text-center hidden">
                    </p>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    const emailInput = document.getElementById("email") as HTMLInputElement;
    const codeInput = document.getElementById("code") as HTMLInputElement;
    const sendCodeBtn = document.getElementById(
        "sendCodeBtn",
    ) as HTMLButtonElement;
    const verifyCodeBtn = document.getElementById(
        "verifyCodeBtn",
    ) as HTMLButtonElement;
    const backBtn = document.getElementById("backBtn") as HTMLButtonElement;
    const resendBtn = document.getElementById("resendBtn") as HTMLButtonElement;
    const emailStep = document.getElementById("emailStep") as HTMLDivElement;
    const codeStep = document.getElementById("codeStep") as HTMLDivElement;
    const displayEmail = document.getElementById(
        "displayEmail",
    ) as HTMLSpanElement;
    const emailMessage = document.getElementById(
        "emailMessage",
    ) as HTMLParagraphElement;
    const codeMessage = document.getElementById(
        "codeMessage",
    ) as HTMLParagraphElement;

    let currentEmail = "";

    function showEmailError(text: string) {
        emailMessage.textContent = text;
        emailMessage.className = "mt-4 text-sm text-center text-red-500";
        emailMessage.classList.remove("hidden");
    }

    function hideEmailError() {
        emailMessage.classList.add("hidden");
    }

    function showCodeError(text: string) {
        codeMessage.textContent = text;
        codeMessage.className = "mt-4 text-sm text-center text-red-500";
        codeMessage.classList.remove("hidden");
    }

    function hideCodeError() {
        codeMessage.classList.add("hidden");
    }

    // Send verification code
    sendCodeBtn.addEventListener("click", async () => {
        const email = emailInput.value.trim();

        if (!email || !email.includes("@")) {
            showEmailError("Please enter a valid email address");
            return;
        }

        hideEmailError();
        sendCodeBtn.disabled = true;
        sendCodeBtn.innerHTML = "<span>Sending...</span>";

        try {
            const response = await fetch("/api/auth/send-code.json", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email }),
            });

            const result = await response.json();

            if (result.success) {
                currentEmail = email;
                displayEmail.textContent = email;
                emailStep.classList.add("hidden");
                codeStep.classList.remove("hidden");
                codeInput.focus();
            } else {
                showEmailError(result.message || "Failed to send code");
            }
        } catch (error) {
            showEmailError("An error occurred. Please try again.");
        }

        sendCodeBtn.disabled = false;
        sendCodeBtn.innerHTML = "<span>Send Verification Code</span>";
    });

    // Verify code
    verifyCodeBtn.addEventListener("click", async () => {
        const code = codeInput.value.trim();

        if (code.length !== 4) {
            showCodeError("Please enter the 4-digit code");
            return;
        }

        hideCodeError();
        verifyCodeBtn.disabled = true;
        verifyCodeBtn.innerHTML = "<span>Verifying...</span>";

        try {
            const response = await fetch("/api/auth/verify-code.json", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email: currentEmail, code }),
            });

            const result = await response.json();

            if (result.success) {
                // Redirect to home page on successful login
                window.location.href = "/";
            } else {
                showCodeError("Invalid or expired code. Please try again.");
                codeInput.value = "";
            }
        } catch (error) {
            showCodeError("An error occurred. Please try again.");
        }

        verifyCodeBtn.disabled = false;
        verifyCodeBtn.innerHTML = "<span>Verify & Login</span>";
    });

    // Back to email step
    backBtn.addEventListener("click", () => {
        codeStep.classList.add("hidden");
        emailStep.classList.remove("hidden");
        codeInput.value = "";
        hideCodeError();
    });

    // Resend code
    resendBtn.addEventListener("click", async () => {
        resendBtn.textContent = "Sending...";

        try {
            await fetch("/api/auth/send-code.json", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email: currentEmail }),
            });

            resendBtn.textContent = "Code Sent!";
            setTimeout(() => {
                resendBtn.textContent = "Resend Code";
            }, 2000);
        } catch (error) {
            resendBtn.textContent = "Resend Code";
            showCodeError("Failed to resend code");
        }
    });

    // Allow Enter key to submit
    emailInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
            sendCodeBtn.click();
        }
    });

    codeInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
            verifyCodeBtn.click();
        }
    });

    // Auto-format code input (numbers only)
    codeInput.addEventListener("input", (e) => {
        const target = e.target as HTMLInputElement;
        target.value = target.value.replace(/[^0-9]/g, "");
    });
</script>
