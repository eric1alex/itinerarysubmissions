---
import Layout from "../layouts/Layout.astro";
import { db, Itinerary, eq } from "astro:db";
import { getUserFromRequest } from "../lib/auth";

// Check authentication
const user = getUserFromRequest(Astro.request);

if (!user) {
    return Astro.redirect("/login");
}

// Load user's itineraries
const itineraries = await db
    .select()
    .from(Itinerary)
    .where(eq(Itinerary.userId, user.userId))
    .orderBy(Itinerary.createdAt, "desc");

const formatDate = (dateStr: string | Date) => {
    return new Date(dateStr).toLocaleDateString("en-IN", {
        year: "numeric",
        month: "short",
        day: "numeric",
    });
};
---

<Layout title="My Itineraries - Where In India">
    <main class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        <div class="flex flex-wrap justify-between items-start gap-4 mb-8">
            <div class="flex flex-col gap-2">
                <p
                    class="text-text-light dark:text-text-dark text-4xl font-black leading-tight tracking-[-0.033em]"
                >
                    My Itineraries
                </p>
                <p
                    class="text-gray-500 dark:text-gray-400 text-base font-normal leading-normal"
                >
                    Logged in as {user.email}
                </p>
            </div>
            <a
                href="/submit"
                class="flex items-center justify-center gap-2 px-5 py-2.5 bg-primary text-white text-sm font-medium rounded-lg shadow-sm hover:bg-primary/90 transition-colors"
            >
                <span class="material-symbols-outlined text-base">add</span>
                <span>Create New</span>
            </a>
        </div>

        {
            itineraries.length === 0 ? (
                <div class="flex flex-col items-center justify-center py-20 gap-4 bg-white dark:bg-gray-800/50 rounded-xl border border-border-light dark:border-border-dark">
                    <span class="material-symbols-outlined text-6xl text-gray-400">
                        map
                    </span>
                    <p class="text-gray-500 dark:text-gray-400 text-lg">
                        You haven't created any itineraries yet
                    </p>
                    <a
                        href="/submit"
                        class="flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-lg font-medium hover:bg-primary/90"
                    >
                        <span class="material-symbols-outlined">add</span>
                        <span>Create Your First Itinerary</span>
                    </a>
                </div>
            ) : (
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-4">
                    {itineraries.map((itinerary) => (
                        <div
                            class="itinerary-card group flex flex-col rounded-xl bg-white dark:bg-neutral-800 border border-gray-200 dark:border-neutral-700 transition-all duration-200 hover:border-primary hover:shadow-lg overflow-hidden"
                            data-id={itinerary.id}
                        >
                            {itinerary.coverImage ? (
                                <div
                                    class="w-full aspect-video bg-center bg-no-repeat bg-cover"
                                    style={`background-image: url("${itinerary.coverImage}");`}
                                />
                            ) : (
                                <div
                                    class="w-full aspect-video bg-center bg-no-repeat bg-cover"
                                    style="background-image: url('https://images.unsplash.com/photo-1524492412937-b28074a5d7da?w=800&h=600&fit=crop');"
                                />
                            )}

                            <div class="p-4 flex flex-col flex-1">
                                <div class="flex items-center gap-2 text-primary mb-2">
                                    <span class="material-symbols-outlined text-lg">
                                        flight_takeoff
                                    </span>
                                    <p class="text-sm font-semibold">
                                        {itinerary.fromLocation} â†’{" "}
                                        {itinerary.toLocation}
                                    </p>
                                </div>

                                <a
                                    href={`/itinerary/${itinerary.id}`}
                                    class="text-gray-900 dark:text-white text-base font-bold leading-snug line-clamp-2 mb-3 group-hover:text-primary transition-colors hover:underline"
                                >
                                    {itinerary.title}
                                </a>

                                <div class="flex items-center gap-3 text-gray-500 dark:text-gray-400 text-sm mb-3">
                                    <div class="flex items-center gap-1.5 bg-gray-100 dark:bg-neutral-700 px-2 py-1 rounded">
                                        <span class="material-symbols-outlined text-base">
                                            schedule
                                        </span>
                                        <span>{itinerary.duration}</span>
                                    </div>
                                    {itinerary.transport && (
                                        <div class="flex items-center gap-1.5 bg-gray-100 dark:bg-neutral-700 px-2 py-1 rounded">
                                            <span class="material-symbols-outlined text-base">
                                                {itinerary.transport === "Car"
                                                    ? "directions_car"
                                                    : itinerary.transport ===
                                                        "Train"
                                                      ? "train"
                                                      : itinerary.transport ===
                                                          "Boat"
                                                        ? "directions_boat"
                                                        : itinerary.transport ===
                                                            "Flight"
                                                          ? "flight"
                                                          : "directions_bus"}
                                            </span>
                                            <span>{itinerary.transport}</span>
                                        </div>
                                    )}
                                </div>

                                <p class="text-xs text-gray-400 mb-3">
                                    Created {formatDate(itinerary.createdAt)}
                                </p>

                                <div class="flex gap-2 mt-auto">
                                    <a
                                        href={`/itinerary/${itinerary.id}`}
                                        class="flex-1 flex items-center justify-center gap-1.5 px-3 py-2 text-sm bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors font-medium"
                                    >
                                        <span class="material-symbols-outlined text-base">
                                            visibility
                                        </span>
                                        <span>View</span>
                                    </a>
                                    <a
                                        href={`/submit?id=${itinerary.id}`}
                                        class="flex items-center justify-center gap-1.5 px-3 py-2 text-sm bg-gray-100 dark:bg-neutral-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-neutral-600 transition-colors"
                                    >
                                        <span class="material-symbols-outlined text-base">
                                            edit
                                        </span>
                                    </a>
                                    <button
                                        class="delete-btn flex items-center justify-center px-3 py-2 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors"
                                        data-id={itinerary.id}
                                        data-title={itinerary.title}
                                    >
                                        <span class="material-symbols-outlined text-base">
                                            delete
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )
        }
    </main>
</Layout>

<script>
    // Toast notification
    function showToast(message, type = "info") {
        const toast = document.createElement("div");
        const colors = {
            success: "bg-green-500",
            error: "bg-red-500",
            info: "bg-primary",
        };
        toast.className = `fixed bottom-4 right-4 ${colors[type]} text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-opacity duration-300`;
        toast.textContent = message;
        document.body.appendChild(toast);
        setTimeout(() => {
            toast.style.opacity = "0";
            setTimeout(() => document.body.removeChild(toast), 300);
        }, 3000);
    }

    // Handle delete buttons
    document.querySelectorAll(".delete-btn").forEach((btn) => {
        btn.addEventListener("click", async (e) => {
            const button = e.currentTarget as HTMLElement;
            const id = button.getAttribute("data-id");
            const title = button.getAttribute("data-title");

            if (!id) return;

            const confirmed = confirm(
                `Are you sure you want to delete "${title}"? This action cannot be undone.`,
            );

            if (!confirmed) return;

            try {
                const response = await fetch(
                    `/api/itineraries/delete/${id}.json`,
                    {
                        method: "DELETE",
                    },
                );

                const result = await response.json();

                if (result.success) {
                    showToast("Itinerary deleted successfully!", "success");
                    // Remove the card from DOM
                    const card = button.closest(".group");
                    if (card) {
                        card.remove();
                    }
                    // If no more cards, reload to show empty state
                    if (document.querySelectorAll(".delete-btn").length === 0) {
                        window.location.reload();
                    }
                } else {
                    showToast(
                        result.message || "Failed to delete itinerary",
                        "error",
                    );
                }
            } catch (error) {
                console.error("Error deleting:", error);
                showToast("Failed to delete itinerary", "error");
            }
        });
    });
</script>
